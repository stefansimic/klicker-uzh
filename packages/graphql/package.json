{
  "name": "@klicker-uzh/graphql",
  "version": "3.0.0-beta.4",
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "prebuild": "npm run generate",
    "build": "NODE_ENV=production tsup --dts",
    "dev": "npm-run-all --parallel dev:graphql dev:ts",
    "dev:ts": "NODE_ENV=development doppler run --config dev -- tsup --watch --dts",
    "dev:graphql": "doppler run --config dev -- graphql-codegen --config codegen.ts --watch '**/**.graphql' --watch '**/**.ts'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate": "graphql-codegen --config codegen.ts",
    "size": "size-limit",
    "check": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/ops.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "graphql-yoga": "^4.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "4.0.1",
    "@graphql-codegen/fragment-matcher": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/schema-ast": "4.0.0",
    "@graphql-codegen/typed-document-node": "5.0.1",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-operations": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@size-limit/preset-small-lib": "8.2.6",
    "@tsconfig/node18": "^2.0.1",
    "@tsconfig/recommended": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/mathjs": "9.4.2",
    "@types/node-schedule": "^2.1.0",
    "@types/validator": "^13.7.5",
    "@types/web-push": "^3.3.2",
    "dotenv": "16.3.1",
    "graphql-codegen-persisted-query-ids": "0.1.2",
    "husky": "8.0.3",
    "ioredis": "5.3.2",
    "jest": "29.6.1",
    "npm-run-all": "4.1.5",
    "size-limit": "8.2.6",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsup": "7.1.0",
    "typescript": "5.1.6",
    "web-push": "3.6.3"
  },
  "dependencies": {
    "@pothos/core": "3.31.0",
    "@pothos/plugin-prisma": "3.53.0",
    "@pothos/plugin-scope-auth": "3.20.0",
    "@pothos/plugin-validation": "3.9.2",
    "@klicker-uzh/grading": "*",
    "@klicker-uzh/prisma": "*",
    "bcryptjs": "2.4.3",
    "dayjs": "1.11.9",
    "generate-password": "1.7.0",
    "graphql": "16.7.1",
    "graphql-scalars": "1.22.2",
    "mathjs": "11.9.0",
    "node-schedule": "2.1.1",
    "validator": "13.9.0",
    "zod": "3.21.4"
  },
  "volta": {
    "extends": "../../package.json"
  }
}
